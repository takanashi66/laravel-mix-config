{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "svg": "npx svg-sprite -C svg.config.json --shape-transform-svgo svgo.config.json resources/assets/svg/*.svg",
        "webp-png": "for file in public/common/img/*.png; do cwebp -lossless -metadata icc \"$file\" -o \"${file%.*}.webp\"; done",
        "webp-jpg": "for file in public/common/img/*.jpg; do cwebp -q 75 -metadata icc -sharp_yuv \"$file\" -o \"${file%.*}.webp\"; done",
        "webp": "npm run webp-png; npm run webp-jpg;"
    },
    "devDependencies": {
        "browser-sync": "^2.26.14",
        "browser-sync-webpack-plugin": "^2.3.0",
        "cross-env": "^7.0.3",
        "css-mqpacker": "^7.0.0",
        "laravel-mix": "^6.0.13",
        "postcss": "^8.2.9",
        "sass": "^1.32.8",
        "sass-loader": "^11.0.1",
        "vue-template-compiler": "^2.6.12"
    },
    "browserslist": [
        "defaults",
        "not ie > 10",
        "not dead"
    ]
}
