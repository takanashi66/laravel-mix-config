{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "svg": "npx svg-sprite -C svg.config.json --shape-transform-svgo svgo.config.json resources/assets/svg/*.svg",
        "img": "node imagemin.config.js"
    },
    "devDependencies": {
        "browser-sync": "^2.27.4",
        "browser-sync-webpack-plugin": "^2.3.0",
        "cross-env": "^7.0.3",
        "imagemin-keep-folder": "^5.3.2",
        "imagemin-mozjpeg": "^9.0.0",
        "imagemin-pngquant": "^9.0.2",
        "imagemin-webp": "^6.0.0",
        "laravel-mix": "^6.0.25",
        "postcss": "^8.3.5",
        "postcss-sort-media-queries": "^3.11.12",
        "sass": "^1.35.1",
        "sass-loader": "^12.1.0"
    },
    "browserslist": [
        "defaults",
        "not ie > 10",
        "not dead"
    ]
